#include <iostream>
#include <vector>

int main() {
    int n;
    std::cin >> n;

    std::vector<int> kfc;
    int total = 0;

    for (int i = 0; i < n; i++) {
        int x;
        std::cin >> x;

        if (!kfc.empty() && kfc.back() == x) {
            kfc.pop_back(); 
            total += 2;       
        } else {
            kfc.push_back(x);
        }
    }

    std::cout << total;

}
