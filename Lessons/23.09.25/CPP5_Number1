#include <iostream>
#include <cstdlib>

int main() {
    int r;
    double sr = 0;
    std::cout << "Размер массива?" << "\n";
    std::cin >> r;
    int mas[r];
    for (int i = 0; i < r; i++) {
        mas[i] = rand()%10;
        sr = sr + mas[i];
        std::cout << mas[i] << " ";
        
    }
    std::cout << "Среднее:" << sr/r;
}